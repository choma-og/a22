<section class="modal">
 <div class="modal__body">
  <div class="modal__content">
   <div class="modal__close">
    <svg width="51" height="51" viewBox="0 0 51 51" fill="none" xmlns="http://www.w3.org/2000/svg">
     <circle cx="25.5" cy="25.5" r="24.75" transform="rotate(-180 25.5 25.5)" stroke="#454040" stroke-width="1.5" />
     <path d="M29.8386 30.6814L20.3186 21.1614" stroke="#454040" stroke-width="1.5" />
     <path d="M20.3186 30.302L29.8386 20.782" stroke="#454040" stroke-width="1.5" />
    </svg>

   </div>
   <div class="modal-container">

    <form class="js-form form__contacts" action="">
     <h2 class="modal__title accent">
      Заказать звонок
     </h2>
     <div class="contacts__wrapper">
      <div class="contacts__input wrapper-name">
       <input name="user_name" class="contacts__name" type="text" id="contacts-name" data-type="text"
        placeholder="Ваше имя">
       <div class="validate__form-error validate__form-error--name js-error js-error-name">
        <span>Пожалуйста, перепроверьте данные</span>
       </div>
      </div>
      <div class="contacts__input wrapper-phone">
       <input data-mask="phone" name="user_phone" class="contacts__tel" data-type="phone" type="text" id="contacts-phone"
        placeholder="Телефон" inputmode="text">
       <div class="validate__form-error validate__form-error--phone js-error js-error-phone">
        <span>Пожалуйста, перепроверьте данные</span>
       </div>
      </div>
     </div>
     <button class="js-modal-btn contacts__btn btn btn-reset js-form-submit" type="submit">Заказать звонок</button>
    </form>
   </div>
  </div>
 </div>
</section>